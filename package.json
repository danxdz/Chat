  "keywords": [
    "p2p",
    "decentralized",
    "chat",
    "gunjs",
    "webrtc",
    "react",
    "real-time",
    "messaging",
    "serverless",
    "mobile"
  ],
  "author": "P2P Chat Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
